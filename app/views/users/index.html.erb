<div class="index_header">
  <h1>Voice Activated PDF Reader!</h1>
</div>


<div class="loginbox">

  <% if current_user %>
      <div class="user_info">
        <h1><%= "Welcome #{current_user.name}" %></h1>
        <%= image_tag current_user.avatar.url(:thumb) %>
      </div>

      <div class="user_upload">
        <%= render 'shared/new_document_form' %>
      </div>


   <% else %>
      <div class="fade_login">
        <%= render 'shared/login_form' %>
      </div>
      <div class="fade_signup">

      </div>
  <% end %>
</div>
