<div class="container-fluid user-show">
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">
      <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12 user-info">
          <h1><%= "#{current_user.name}" %></h1>
          <div class="user_info">
            <%= image_tag(current_user.avatar.url(:thumb)) %>
            <br/>
            <br/>
            <%= link_to 'Update Info', user_path(current_user), method: :put, remote: true, class:'btn btn-primary btn-sm' %>



          </div>
        </div>
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <div class="user_edit">

            <%= render 'shared/edit_user_form' %>

          </div>
        </div>
      </div>
      <!--<div class="row">-->
        <br/>
        <div class="col-xs-12 col-md-12">

          <ul class="list-group">
            <li class="list-group-item list-group-item-success">
              <h4>Tips:</h4>
            </li>
            <li class="list-group-item">
              Simply click on the image to view the PDF!
            </li>
            <li class="list-group-item">
              You can edit the name of your PDF Just by clicking the name!
            </li>
          </ul>
        </div>
      <!--</div>-->



      </div>

    </div>
    <div class="clearfix visible-xs-block"></div>

    <div class="col-xs-12 col-sm-10 col-md-10">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
          <h1>Library</h1>
        </div>

        <div class="row library-row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                  <%= render 'documents/user_library' %>
             </div>
         </div>
        </div>
      </div>


      </div>


    </div>










