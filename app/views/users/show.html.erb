<h1><%= "Welcome #{current_user.name}!" %></h1>
<div class="user_info">

  <%= image_tag(current_user.avatar.url(:thumb)) %>
  <br/>
  <%= link_to 'Update Info', user_path(current_user), method: :put, remote: true %>
</div>

<div class="user_documents">
  <h1>Your Uploads!</h1>
  <% @user.documents.each do |file| %>
      <% file.cover_file_name = file.pdf_file_name[0..-4] + 'jpg'.to_s %>
      <% cover_url = "https://dl.dropboxusercontent.com/1/view/lk96ksjtfelt3o2/Apps/VoicePDF/documents/pdfs/#{file.id}/#{file.cover_file_name}" %>
      <div class="uploaded">
        <li><%=link_to file.title, document_path(file.id) %></li>
        <li><%= file.description %></li>
        <li><%= image_tag(file.pdf(:cover)) %></li>
        <li><%=link_to 'Delete', document_path(file.id), method: :delete  %></li>
      </div>

      <br/>

  <% end %>
</div>
<div class="user_edit">

    <%= render 'shared/edit_user_form' %>

</div>
