<%= form_for @user, :url => user_path, method: :put, :html => { :multipart => true } do |f| %>
    <div class="form-group">
      <h3>Update Info</h3>
    </div>
    <div class="form-group">
      <%= f.text_field :name, placeholder: current_user.name %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, placeholder: current_user.email %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, placeholder: 'Password' %>
    </div>
    <div class="form-group">
      <p>Update Profile Pic</p>
      <%= f.file_field :avatar, placeholder: 'Upload Pic'%>
    </div>

    <%= f.submit 'Update',class: 'btn btn-default'%>
    <%= link_to 'Back', user_path(current_user), class: 'back_link btn btn-default' %>
    <br/>
    <%= link_to 'Delete Account', user_path(current_user), method: :delete, data: {confirm:'Are you sure you want to send your account to the fiery pits of Mordor!?'}, class: 'btn btn-danger btn-sm delete-account'  %>
<% end %>