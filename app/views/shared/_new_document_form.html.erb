
  <%= form_for [@user,@document], url: documents_path, html: { multipart: true } do |f| %>
      <div class="form-group">
        <h1>Upload Your PDF!</h1>
      </div>
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter a title here...' %>
      </div>
      <div class="form-group">
        <%= link_to 'Upload From URL', '#', class: 'btn btn-default btn-sm upload-by-url' %> <%= link_to 'Upload From Computer', '#', class: 'btn btn-default btn-sm upload-by-computer' %>
      </div>
      <div class="form-group url-upload">
        <%= f.text_field :cover_file_name, class: 'form-control', placeholder: 'Enter a url...' %>
      </div>
      <div class="form-group computer-upload">
        <%= f.file_field :pdf%>
      </div>


      <%= f.submit 'Upload!', class: 'new_doc_submit btn btn-primary', remote: true%>

  <% end %>

