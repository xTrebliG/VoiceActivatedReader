<%= form_tag(signin_path, method: :post, class: 'login_form') do %>
    <h3>Log-In</h3>
    <div class="form-group">
      <%= email_field_tag :email, nil, placeholder: 'Email' %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, nil, placeholder: 'Password' %>
    </div>

      <%= link_to 'Sign up', new_user_path, remote: true, class: 'signup_link btn btn-default'%>
      <%= submit_tag 'Login', class: 'login_link btn btn-default'%>



<% end %>