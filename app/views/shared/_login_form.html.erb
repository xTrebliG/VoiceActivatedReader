<%= form_tag(signin_path, method: :post) do %>

    <h1>Log In</h1>
    <%= email_field_tag :email, nil, placeholder: 'Email' %>
    <br>
    <%= password_field_tag :password, nil, placeholder: 'Password' %>
    <br>
    <%= link_to 'Sign up', new_user_path, remote: true%>
    <%= submit_tag 'Login' %>

<% end %>