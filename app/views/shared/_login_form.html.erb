<%= form_tag(signin_path, method: :post, class: 'login_form') do %>
    <span id="close-login"><i class="fa fa-times"></i></span>
    <h2>Log-In <br/></h2>
    <div class="form-group">
      <%= email_field_tag :email, nil, placeholder: 'Email', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control'  %>
      <br/>
      <%= submit_tag 'Login', class: 'login_link btn btn-default'%>
      <%= link_to 'Sign up!', '#signup', remote: true, class: 'signup_link btn btn-default'%>
    </div>
<% end %>