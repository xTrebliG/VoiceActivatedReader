<%= form_tag(signin_path, method: :post, class: 'login_form') do %>
    <h2>Log-In <br/></h2>
    <div class="form-group">
      <%= email_field_tag :email, nil, placeholder: 'Email' %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, nil, placeholder: 'Password'  %>
      <br/>
      <%= submit_tag 'Login', class: 'login_link btn btn-default'%>
    </div>

    <div class="form-group">
      <h4>New User? Sign Up Below!</h4>
      <%= link_to 'Sign up!', '#signup', remote: true, class: 'signup_link btn btn-default'%>
    </div>



<% end %>