<div class="row">


  <% @user.documents.reverse.each do |file| %>
      <div class="col-sm-6 col-md-6 col-lg-3 doc-height">
        <%= div_for file do %>
            <div class="thumbnail">
              <h3><%= best_in_place file, :title, :as => :input %></h3>
              <%= link_to image_tag(file.pdf(:cover)), document_path(file.id)%>
              <div class="caption">
                <p>
                  <a href="<%= file.pdf.url(:original, false)%>" download class="btn btn-primary">Download</a>
                  <%=link_to 'Delete', document_path(file.id), method: :delete, remote: true, class: 'delete_document_link btn btn-danger',  role: 'button', date: {confirm:'Are you sure you want to delete this document?'}%></p>

              </div>
            </div>
        <% end %>
      </div>
  <% end %>


</div>