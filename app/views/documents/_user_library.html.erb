<% @user.documents.reverse.each do |file| %>
        <div class="col-sm-6 col-md-4 doc-height">
          <%= div_for file do %>
              <div class="thumbnail">
                <%= link_to image_tag(file.pdf(:cover)), document_path(file.id), class: 'img-responsive' %>
                <div class="caption">
                  <h3><%= best_in_place file, :title, :as => :input %></h3>
                  <p><%=link_to 'Delete', document_path(file.id), method: :delete, remote: true, class: 'delete_document_link btn btn-primary',  role: 'button'%></p>

                </div>
              </div>
          <% end %>
        </div>
  <% end %>



