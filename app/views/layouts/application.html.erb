<!DOCTYPE html>
<html>
<head>
  <title>VoiceActivated</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= init_annyang %>
</head>
<body>
<nav class="navbar">
  <ul>
    <li>
      <% if current_user %>
          <a><%= link_to 'Home', root_path %></a> |
          <a><%= link_to 'Library', user_path(current_user)%></a> |
          <a><%= link_to 'Sign Out', logout_path %></a>

    </li>

    <% else %>

    <li>
     <a><%= link_to 'Sign In', users_path, remote: true %></a>
    </li>

    <% end %>
  </ul>
</nav>
<div id="spacer"></div>

<%= flash[:notice] if flash[:notice] %>
<%= flash[:alert] if flash[:alert] %>



<%= yield %>

</body>
</html>
